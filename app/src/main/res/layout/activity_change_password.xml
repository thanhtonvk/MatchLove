<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.User.ChangePasswordActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/backgroung_frame"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:text="Đổi mật khẩu"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/edt_oldpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/button_border"
            android:backgroundTint="#80F3C9D7"
            android:gravity="center"
            android:hint="Nhập mật khẩu cũ"
            android:inputType="textPassword"
            android:padding="15dp"
            android:textColor="#99000000"
            android:textColorHint="#80000000" />

        <EditText
            android:id="@+id/edt_newpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/button_border"
            android:backgroundTint="#80F3C9D7"
            android:gravity="center"
            android:hint="Nhập mật khẩu mới"
            android:inputType="textPassword"
            android:padding="15dp"
            android:textColor="#99000000"
            android:textColorHint="#80000000" />

        <EditText
            android:id="@+id/edt_prenewpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/button_border"
            android:backgroundTint="#80F3C9D7"
            android:gravity="center"
            android:hint="Nhập lại mật khẩu mới"
            android:inputType="textPassword"
            android:padding="15dp"
            android:textColor="#99000000"
            android:textColorHint="#80000000" />

        <Button
            android:id="@+id/btn_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/button_border"
            android:backgroundTint="#E87CA0"
            android:gravity="center"
            android:padding="15dp"
            android:text="Đổi mật khẩu"
            android:textColor="#99FFFFFF"
            android:textColorHint="#80000000" />
    </LinearLayout>

</LinearLayout>