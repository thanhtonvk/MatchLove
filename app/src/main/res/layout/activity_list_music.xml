<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.User.ListMusicActivity"
    android:background="@drawable/bgr_timkiem">
    <ImageView
        android:src="@drawable/anh1"
        android:scaleType="centerCrop"
       android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/img_avatar"/>
    <TextView
        android:id="@+id/tv_namelist"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danh sách nhạc lofi"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18sp"/>
    <androidx.cardview.widget.CardView
        android:backgroundTint="#006064"
        android:layout_margin="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="25dp">
        <ImageView
            android:id="@+id/btn_playmusic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_play"/>
    </androidx.cardview.widget.CardView>
    <ListView
        android:id="@+id/lv_listmusic"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>