<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.User.Fragment.AccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@drawable/button_border"
        android:backgroundTint="#F1EFEF"
        android:orientation="vertical"
        android:weightSum="10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@drawable/background_account"
            android:backgroundTint="@color/white">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="75dp">

                <ImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/cardview"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:id="@+id/img_info"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_edit" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_name_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardview"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Nguyễn Thu Phương"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_age_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name_account"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="20 tuổi"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_address_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_age_account"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Hà Nội"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_media"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_address_account"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="50dp">

                <ImageButton
                    android:id="@+id/btn_media"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_gradient"
                    android:padding="20dp"
                    android:src="@drawable/ic_camera" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardview_media"
                android:layout_centerHorizontal="true"
                android:text="Thêm ảnh"
                android:textSize="15sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name_account"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:layout_toLeftOf="@id/cardview_media"
                app:cardCornerRadius="50dp">

                <Button
                    android:id="@+id/btn_setting"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/editext_border"
                    android:drawableTop="@drawable/ic_setting"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Thiết lập"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_safety"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name_account"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/cardview_media"
                app:cardCornerRadius="50dp">

                <Button
                    android:id="@+id/btn_safety"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/editext_border"
                    android:drawableTop="@drawable/ic_safe"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Bảo mật"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6" />
    </LinearLayout>

</LinearLayout>